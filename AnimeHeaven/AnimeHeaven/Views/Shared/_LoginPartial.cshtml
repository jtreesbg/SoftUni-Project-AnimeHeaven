@using Microsoft.AspNetCore.Identity
@using AnimeHeaven.Services.Sellers

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ISellerService Sellers

@if (SignInManager.IsSignedIn(User))
{
    var userId = User.GetId();
    var userIsSeller = Sellers.IsSeller(userId);

    @if (userIsSeller)
    {
        <a class="nav-link text-white" asp-controller="Products" asp-action="My">My Products</a>
    }
    else
    {
        <a class="nav-link text-white" asp-controller="Seller" asp-action="Become">Become Seller</a>
    }

    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
    </form>
}
else
{
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
